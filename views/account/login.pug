extends ../layout

block content
  .pb-2.mt-2.mb-4.border-bottom
    h3 Sign in
  form.col-md-6(method='POST' style="display:inline-block;border-right:1px solid #dee2e6")
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group
      label.col-md-3.col-form-label.font-weight-bold(for='email') Email
      .col-md-12
        input.form-control(type='email', name='email', id='email', placeholder='Email', autofocus, autocomplete='email', required)
    .form-group
      label.col-md-3.col-form-label.font-weight-boldt(for='password') Password
      .col-md-12
        input.form-control(type='password', name='password', id='password', placeholder='Password', autocomplete='current-password', required)
    .form-group
      .col-md-12
        button.col-md-3.btn.btn-primary(type='submit')
          i.far.fa-user.fa-sm
          | Login
        a.btn.btn-link(href='/forgot') Forgot your password?
  form.col-md-6(method='POST' style="display:inline-block;")
    .form-group
      .col-md-12
        a.btn.btn-block.btn-snapchat.btn-social.d-none(href='/auth/snapchat')
          i.fab.fa-snapchat-ghost.fa-sm
          | Sign in with Snapchat
        a.btn.btn-block.btn-facebook.btn-social(href='/auth/facebook')
          i.fab.fa-facebook-f.fa-sm
          | Sign in with Facebook
        a.btn.btn-block.btn-twitter.btn-social(href='/auth/twitter')
          i.fab.fa-twitter.fa-sm
          | Sign in with Twitter
        a.btn.btn-block.btn-google.btn-social(href='/auth/google')
          i.fab.fa-google-plus-g.fa-xs
          | Sign in with Google
        a.btn.btn-block.btn-github.btn-social.d-none(href='/auth/github')
          i.fab.fa-github.fa-sm
          | Sign in with GitHub
        a.btn.btn-block.btn-linkedin.btn-social(href='/auth/linkedin')
          i.fab.fa-linkedin-in.fa-sm
          | Sign in with LinkedIn
        a.btn.btn-block.btn-instagram.btn-social.d-none(href='/auth/instagram')
          i.fab.fa-instagram.fa-sm
          | Sign in with Instagram
